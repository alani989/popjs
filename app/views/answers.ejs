<head>
        <% include partials/head.ejs %>
    </head>
    
    <body>
        <% include partials/jumbotron.ejs %>

    <div class="col-lg-6">
        <h3 class="bg-light text-center raisedbox">Answers's Cards</h3>

        <% if (title.length > 0) { %>
            <% for (i=0; i< title.length; i++) { %>
                <div class="card raisedbox">
                    <div class="card-header">
                        <h3>
                            <%= title[i] %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>
                                <%= content[i] %>
                            </p>
                        </blockquote>
                    </div>
                    <div class="card-body">
                        <form action="/postAnswer/<%=questionid[i]%>?xyz=<%=userid%>" method="POST">
                            <input type="text" name="content" placeholder="Answer here...">
                            <button class="btn btn-success" type="submit">Submit</button>
                        </form>
                    </div>
                </div>
                <br>
                <% } %>
                    <% } %>

    </div>

            <!-- importing bootstrap scripts -->
            <% include partials/bootstrap.ejs %>
</body>